@model QuanLyCuaHangSach.Models.NhaXuatBan
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Xóa Tác Giả</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <!---->
            <div class="col-2">
                <label asp-for="TenNhaXuatBan">Tên Nhà Xuất Bản</label>
            </div>
            <div class="col-5">
                <input asp-for="TenNhaXuatBan" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <!---->
            <div class="col-2">
                <label asp-for="DiaChi">Địa Chỉ</label>
            </div>
            <div class="col-5">
                <input asp-for="DiaChi" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <!---->
            <div class="col-2">
                <label asp-for="Email">Email</label>
            </div>
            <div class="col-5">
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <!---->
            <div class="col-2">
                <label asp-for="ThongTinNguoiDaiDien">Info Người đại diện</label>
            </div>
            <div class="col-5">
                <input asp-for="ThongTinNguoiDaiDien" class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.IDNhaXuatBan" value="Xóa" />
            <a asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
        </div>
    </div>
</form>