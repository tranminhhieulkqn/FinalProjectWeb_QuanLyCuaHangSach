@model QuanLyCuaHangSach.Models.NhaXuatBan
@{
    ViewData["Title"] = "Tạo Mới Nhà Xuất Bản";
}

<br />
<h2 class="text-info">Thêm Nhà Xuất Bản mới</h2>

<form method="post" asp-action="Create">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <!---->
            <div class="col-2">
                <label asp-for="TenNhaXuatBan">Tên Nhà Xuất Bản</label>
            </div>
            <div class="col-5">
                <input asp-for="TenNhaXuatBan" class="form-control" />
            </div>
            <span asp-validation-for="TenNhaXuatBan" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <!---->
            <div class="col-2">
                <label asp-for="DiaChi">Địa Chỉ</label>
            </div>
            <div class="col-5">
                <input asp-for="DiaChi" class="form-control" />
            </div>
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <!---->
            <div class="col-2">
                <label asp-for="Email">Email</label>
            </div>
            <div class="col-5">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <!---->
            <div class="col-2">
                <label asp-for="ThongTinNguoiDaiDien">Info Người đại diện</label>
            </div>
            <div class="col-5">
                <input asp-for="ThongTinNguoiDaiDien" class="form-control" />
            </div>
            <span asp-validation-for="ThongTinNguoiDaiDien" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Tạo mới" />
            <a asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}