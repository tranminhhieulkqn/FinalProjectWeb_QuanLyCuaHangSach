@model IEnumerable<QuanLyCuaHangSach.Models.ApplicationUser>
@{
    ViewData["Title"] = "Quản Trị Viên";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Danh Sách Quản Trị Viên</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Thêm người Quản Trị</a>
    </div>
</div>

<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                Tên Quản Trị Viên
            </th>
            <th>
                Email
            </th>
            <th>
                Số Điện Thoại
            </th>
            <th>
                Disabled
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(m => item.PhoneNumber)
                </td>
                <td>
                    @if (item.LockoutEnd != null && item.LockoutEnd > DateTime.Now)
                    {
                        <label>Disabled</label>
                    }
                </td>
                <td>
                    @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                    {
                        <a type="button" class="btn btn-primary" href="@Url.Action("Edit/" + item.Id).Replace("%2F","/")">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a type="button" class="btn btn-danger" href="@Url.Action("Delete/"+item.Id).Replace("%2F","/")">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    }
                </td>

            </tr>

        }
    </table>
</div>

