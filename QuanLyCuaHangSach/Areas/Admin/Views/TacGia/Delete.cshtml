@model QuanLyCuaHangSach.Models.TacGia
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Xóa Tác Giả</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TenTacGia">Tên Tác Giả</label>
            </div>
            <div class="col-5">
                <input asp-for="TenTacGia" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Website">Website</label>
            </div>
            <div class="col-5">
                <input asp-for="Website" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="GhiChu">Ghi Chú</label>
            </div>
            <div class="col-5">
                <input asp-for="GhiChu" disabled class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.IDTacGia" value="Xóa" />
            <a asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
        </div>
    </div>
</form>