@model QuanLyCuaHangSach.Models.ViewModel.PhieuNhapViewModel
@using QuanLyCuaHangSach.Extensions
@{
    ViewData["Title"] = "Thêm Phiếu Nhập";
}

<br />
<h2 class="text-info"></h2>
<form method="post" asp-action="AddUnavailable" class="row">
    @*<input hidden asp-for="@Model.PhieuNhap.IDSach" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="p-4 border rounded row">
        <div class="col-5">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.SachVM.Sach.TenSach">Tên Sách</label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.SachVM.Sach.TenSach" class="form-control" />
                </div>
                <span asp-validation-for="@Model.SachVM.Sach.TenSach" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.SachVM.Sach.Gia">Giá</label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.SachVM.Sach.Gia" class="form-control" />
                </div>
                <span asp-validation-for="@Model.SachVM.Sach.Gia" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.SachVM.Sach.Anh">Ảnh</label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" class="form-control" />
                </div>
            </div>
            <!---->
            <div class="form-group row">
                <div class="col-4">
                    <!--The Loai-->
                    <label asp-for="@Model.SachVM.TheLoai">Thể Loại</label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.SachVM.Sach.IDTheLoai" asp-items="@Model.SachVM.TheLoai.ToSelectListTheLoai(@Model.SachVM.Sach.IDTheLoai)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.SachVM.TacGia">Tác Giả</label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.SachVM.Sach.IDTacGia" asp-items="@Model.SachVM.TacGia.ToSelectListTacGia(@Model.SachVM.Sach.IDTacGia)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.SachVM.NhaXuatBan">Nhà Xuất Bản</label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.SachVM.Sach.IDNhaXuatBan" asp-items="@Model.SachVM.NhaXuatBan.ToSelectListNhaXuatBan(@Model.SachVM.Sach.IDNhaXuatBan)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.SachVM.Sach.NamXB">Năm Xuất Bản</label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.SachVM.Sach.NamXB" class="form-control" />
                </div>
                <span asp-validation-for="@Model.SachVM.Sach.NamXB" class="text-danger"></span>
            </div>
        </div>
        <div class="col-2">
            @*<div class="form-group row" style="align-self:center;">
                <img src="@sachTemp.Anh" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>*@
        </div>
        <div class="col-5">
            <div class="form-group row">
                <div class="col-4">
                    @*<label asp-for="Sach.CoSan">Có sẵn</label>*@
                    <label>Nhân viên</label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.PhieuNhap.IDNhanVien" asp-items="@Model.NhanVien.ToSelectListItemString(Model.NhanVien.FirstOrDefault().Id)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    @*<label asp-for="Sach.CoSan">Có sẵn</label>*@
                    <label>Ngày nhập kho</label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.PhieuNhap.NgayNhap" value="" type="text" id="datepicker" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="spinner">Số Lượng Nhập Kho</label>
                </div>
                <div class="col-8">
                    <input style="width:100%" type="number" id="spinner" asp-for="@Model.PhieuNhap.SoLuong" value="1" min="1" step="1" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.PhieuNhap.MoTa">Mô tả</label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.PhieuNhap.MoTa" class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-12 form-group border-right">
            <input type="submit" class="btn btn-primary" value="Tạo mới" />
            <a asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        $('.timepicker').timepicker({
            timeFormat: 'h:mm p',
            interval: 30,
            minTime: '10',
            maxTime: '3:00pm',
            startTime: '10:00',
            dynamic: true,
            dropdown: true,
            scrollbar: true
        });

        $(function () {
            $("#datepicker").datepicker({
                //minDate: +0, maxDate: "+3M"
            });
        });
    </script>
}