@model QuanLyCuaHangSach.Models.ViewModel.PhieuNhapViewModel
@using QuanLyCuaHangSach.Extensions
@{
    ViewData["Title"] = "Thêm Phiếu Nhập";
}

<br />
<h2 class="text-info"></h2>
<form method="post" asp-action="AddAvailable" class="row">
    @*<input hidden asp-for="@Model.PhieuNhap.IDSach" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="p-4 border rounded row">
        @{
            Sach sachTemp = Model.PhieuNhap.Sach;
        }
        <div class="col-5">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@sachTemp.TenSach">Tên Sách</label>
                </div>
                <div class="col-8">
                    <input asp-for="@sachTemp.TenSach" readonly class="form-control" />
                    <input hidden asp-for="@Model.PhieuNhap.IDSach" asp-items="@Model.PhieuNhap.Sach.IDSach" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@sachTemp.Gia">Giá</label>
                </div>
                <div class="col-8">
                    <input asp-for="@sachTemp.Gia" readonly class="form-control" />
                </div>
            </div>
            <!---->
            <div class="form-group row">
                <div class="col-4">
                    <!--The Loai-->
                    <label asp-for="@sachTemp.TheLoai.TenTheLoai">Thể Loại</label>
                </div>
                <div class="col-8">
                    <input asp-for="@sachTemp.TheLoai.TenTheLoai" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@sachTemp.TacGia.TenTacGia">Tác Giả</label>
                </div>
                <div class="col-8">
                    <input asp-for="@sachTemp.TacGia.TenTacGia" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@sachTemp.NhaXuatBan.TenNhaXuatBan">Nhà Xuất Bản</label>
                </div>
                <div class="col-8">
                    <input asp-for="@sachTemp.NhaXuatBan.TenNhaXuatBan" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@sachTemp.NamXB">Năm Xuất Bản</label>
                </div>
                <div class="col-8">
                    <input asp-for="@sachTemp.NamXB" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    @*<label asp-for="Sach.CoSan">Có sẵn</label>*@
                    <label>Số lượng có sẵn</label>
                </div>
                <div class="col-8">
                    <input disabled readonly class="form-control" asp-for="@sachTemp.SoLuongCoSan" />
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="form-group row" style="align-self:center;">
                <img src="@sachTemp.Anh" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>
        </div>
        <div class="col-5">
            <div class="form-group row">
                <div class="col-4">
                    @*<label asp-for="Sach.CoSan">Có sẵn</label>*@
                    <label>Nhân viên</label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.PhieuNhap.IDNhanVien" asp-items="@Model.NhanVien.ToSelectListItemString(Model.NhanVien.FirstOrDefault().Id)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    @*<label asp-for="Sach.CoSan">Có sẵn</label>*@
                    <label>Ngày nhập kho</label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.PhieuNhap.NgayNhap" value="" type="text" id="datepicker" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="spinner">Số Lượng Nhập Kho</label>
                </div>
                <div class="col-8">
                    <input type="number" id="spinner" asp-for="@Model.PhieuNhap.SoLuong" value="1" min="1" step="1" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.PhieuNhap.MoTa">Mô tả</label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.PhieuNhap.MoTa" class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-12 form-group border-right">
            <input type="submit" class="btn btn-primary" value="Tạo mới" />
            <a asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        $('.timepicker').timepicker({
            timeFormat: 'h:mm p',
            interval: 30,
            minTime: '10',
            maxTime: '3:00pm',
            startTime: '10:00',
            dynamic: true,
            dropdown: true,
            scrollbar: true
        });

        $(function () {
            $("#datepicker").datepicker({
                //minDate: +0, maxDate: "+3M"
            });
        });
    </script>
}