@model QuanLyCuaHangSach.Models.TheLoai
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Xóa Thể Loại</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TenTheLoai"></label>
            </div>
            <div class="col-5">
                <input asp-for="TenTheLoai" disabled class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.IDTheLoai" value="Xóa" />
            <a asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
        </div>
    </div>
</form>