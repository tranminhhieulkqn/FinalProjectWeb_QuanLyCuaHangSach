@model List<QuanLyCuaHangSach.Models.Sach>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@if (Model.Count > 0)
{
<table class="table table-striped" width="100%">
    <tr class="table-info">
        <th style="text-align:center; width:20%"></th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().TenSach"></label>
        </th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().Gia"></label>
        </th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().NamXB"></label>
        </th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().TacGia.TenTacGia"></label>
        </th>
        <th style="text-align:center;"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="padding:50px;">
            <td>
                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.IDSach">
                    <img src="@item.Anh" width="100%" style="margin:auto; display:block; border-radius:5px; border:1px solid #bbb9b9;" />
                </a>
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(c => item.TenSach)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(c => item.Gia)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(c => item.NamXB)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(c => item.TacGia.TenTacGia)
            </td>
            <td style="text-align:center">
             
            </td>
        </tr>

    }
</table>
}
else
{
    <div>No items added to the shopping cart...</div>
}
